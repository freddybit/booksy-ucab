<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.9" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="models\files\book.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="data\book.json" />
    <_ContentIncludedByDefault Remove="data\buyers.json" />
    <_ContentIncludedByDefault Remove="data\sellers.json" />
    <_ContentIncludedByDefault Remove="data\ventas.json" />
  </ItemGroup>

</Project>
